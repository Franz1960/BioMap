@page "/Map"

@inject IJSRuntime JSRuntime

<div id="googleMap" style="height:1000px;width:100%;">
</div>

@code{

  protected override async Task OnAfterRenderAsync(bool firstRender)
  {
    if (firstRender)
    {
      await JSRuntime.InvokeVoidAsync("InitMap", null);
      StateHasChanged();
    }

  }
}