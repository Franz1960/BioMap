@inject Microsoft.Extensions.Localization.IStringLocalizer<App> Localize
@using Microsoft.AspNetCore.Components.Forms
@inject DataService DS
@inject Filters Filters
@inject IJSRuntime JSRuntime
@using BioMap

<div class="form-group">
  <span data-toggle="tooltip" title="@Localize["A list of places, e.g. 'B2,B3,C1' or '!B1,M1' if negated."]">@Localize["Place filter"]: </span>
  <input type="text" value="@Filters.PlaceFilter" @onchange="PlaceInput_Changed" />
</div>

@code {
  [Parameter]
  public string SelectedValue { get; set; }
  [Parameter]
  public string[] Places { get; set; }
  [Parameter]
  public EventCallback<EventArgs> OnAnyChangedCallback { get; set; }
  //
  private void PlaceInput_Changed(ChangeEventArgs e) {
    Filters.PlaceFilter=e.Value.ToString();
    this.OnAnyChangedCallback.InvokeAsync(EventArgs.Empty);
  }

}