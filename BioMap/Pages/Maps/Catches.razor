@page "/Maps/Catches"
@inject Microsoft.Extensions.Localization.IStringLocalizer<App> Localize
@using GoogleMapsComponents
@using GoogleMapsComponents.Maps
@inherits ElementMap

<PhotoPopup @ref="PhotoPopup1" />

<div class="box">
  <div class="row header">
    <FilterSettings FilteringTarget="@Filters.FilteringTargetEnum.Catches" />
  </div>
  <div class="row content">
    <Row>
      <Column>
        <MapSettings AreaMap="this" ShowConnectorSwitch="true" DisplayConnectorsChanged="@((value) => { this.RefreshElementMarkers(); })" />
      </Column>
    </Row>
    <Row Style="height:100%;">
      <Column>
        <GoogleMap @ref="@googleMap" Id="googleMap" Options="@mapOptions" Height="100%"></GoogleMap>
      </Column>
    </Row>
  </div>
</div>
