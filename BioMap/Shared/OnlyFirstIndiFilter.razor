@inject Microsoft.Extensions.Localization.IStringLocalizer<App> Localize
@using Microsoft.AspNetCore.Components.Forms
@inject SessionData SD
@inject IJSRuntime JSRuntime
@using BioMap

<CheckBox Checked="@SD.Filters.OnlyFirstIndiFilter" LabelText=@Localize["Only first image"] OnAnyChangedCallback="@CheckBox_CheckedChanged" />

@code {
  [Parameter]
  public EventCallback<EventArgs> OnAnyChangedCallback { get; set; }
  //
  private void CheckBox_CheckedChanged(ChangeEventArgs e) {
    SD.Filters.OnlyFirstIndiFilter=bool.Parse(e.Value.ToString());
    this.OnAnyChangedCallback.InvokeAsync(EventArgs.Empty);
  }

}